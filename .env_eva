#!/bin/bash
# EVA environment activation script

# Activate EVA's Python 3.8 venv
source /home/ubuntu/gravatar/submodules/EVA_Official/.venv_eva/bin/activate

# Set CUDA paths (use system CUDA 12.5, PyTorch 1.12 runtime handles compatibility)
export CUDA_HOME=/usr/local/cuda-12.5
export PATH=$CUDA_HOME/bin:$PATH
export LD_LIBRARY_PATH=$CUDA_HOME/lib64:$LD_LIBRARY_PATH

# Verify
echo "✓ EVA environment activated (Python 3.8, PyTorch 1.12)"
echo "✓ CUDA: $(nvcc --version | grep release | awk '{print $5}')"
echo "✓ GPU: $(nvidia-smi --query-gpu=name --format=csv,noheader | head -1)"

# Ready for EVA preprocessing
